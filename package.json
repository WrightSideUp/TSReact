{
  "name": "tsreact",
  "description": "POC for including React, React Router v4, Typescript, HMR, SSR in one sweet pie.",
  "version": "0.1.0",
  "author": "Bruce Wright",
  "license": "MIT",
  "main": "index.js",
  "betterScripts": {
    "start": {
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "production"
      },
      "command": "ts-node --disableWarnings --fast src/server"
    },
    "start:dev": {
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "development"
      },
      "command": "nodemon ./src/server"
    }
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "webpack -p --env=production",
    "lint": "tslint --project tsconfig.json --type-check",
    "start": "better-npm-run start",
    "start:dev": "better-npm-run start:dev"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wrightsideup/tsreact.git"
  },
  "dependencies": {
    "@types/react": "^16.0.20",
    "@types/react-dom": "^16.0.2",
    "@types/webpack-bundle-analyzer": "^2.9.0",
    "@types/node": "^8.0.47",
    "@types/webpack-env": "^1.13.2",
    "better-npm-run": "^0.1.0",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "nodemon": "^1.12.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "styled-components": "^2.2.3",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.39",
    "@types/react-hot-loader": "^3.0.5",
    "@types/webpack": "^3.0.14",
    "@types/webpack-dev-middleware": "^1.9.3",
    "@types/webpack-hot-middleware": "^2.16.0",
    "@types/webpack-merge": "^4.1.0",
    "awesome-typescript-loader": "^3.3.0",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1",
    "webpack-hot-middleware": "^2.20.0"
  }
}
